<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto" >Add Product</a>
        </div>
        <table class="table mt-5" id="my-table">
  <thead>
    <tr>
      <th scope="col">no</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
      <th scope="col">options</th>
      <th scope="col">Del</th>
    </tr>
  </thead>
  <tbody>

    {{#each products}}
  <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 70px;height:70px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-danger">Edit</a></td>
      <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-primary" onclick="return confirm('do you want delete{{this.Name}}?')">Delete</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>

    

</section>
